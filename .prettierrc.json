{
  "semi": true,
  "printWidth": 120,
  "tabWidth": 4,
  "endOfLine": "auto",
  "singleQuote": true,
  "trailingComma": "none",
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "singleQuote": false
      }
    }, {
      "files": ["*.js", "*.json", "*.ts"],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
