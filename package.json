{
  "name": "commonwealth-contracts",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "dev:coverage": "hardhat coverage",
    "dev:docgen": "hardhat docgen",
    "dev:lint": "solhint \"contracts/**/*.sol\"",
    "dev:size-contracts": "hardhat size-contracts",
    "dev:slither": "slither --solc-args \"--base-path . --include-path node_modules/\" contracts/",
    "export-abi": "hardhat export-abi",
    "prettier:fix": "prettier --write \"**/*.ts\" \"contracts/**/*.sol\"",
    "prettier:check": "prettier --check \"**/*.ts\" \"contracts/**/*.sol\"",
    "test": "hardhat test",
    "verify-mainnet": "hardhat verify --network ethereum",
    "verify-testnet": "hardhat verify --network goerli",
    "check-style": "yarn prettier:check && yarn dev:lint",
    "static-analyze": "yarn check-style && yarn dev:size-contracts && yarn dev:slither",
    "check-full": "yarn clean && yarn compile && yarn static-analyze && yarn dev:coverage && REPORT_GAS=true yarn test && yarn dev:docgen && yarn export-abi"
  },
  "devDependencies": {
    "@defi-wonderland/smock": "^2.3.4",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.7",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.3",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.17",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.4",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-docgen": "^1.3.0",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-tracer": "^1.2.1",
    "mocha-explorer-launcher-scripts": "^0.4.0",
    "prettier": "^2.8.1",
    "prettier-plugin-solidity": "^1.1.0",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.8.0",
    "@openzeppelin/contracts-upgradeable": "^4.8.0"
  }
}
